<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:background="#ffffff"
    android:id="@+id/timersTable">

    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Timer Table"
            android:layout_span="4"
            android:padding="20dip"
            android:background="#b0b0b0"
            android:textColor="#000"/>
    </TableRow>
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:baselineAligned="true" android:background="#8adec7">
        <TextView
            android:id="@+id/TextView10" android:text="Tap id"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="2dip" android:gravity="center"/>
        <TextView
            android:id="@+id/TextView11" android:text="Day"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="2dip" android:gravity="center"
            android:layout_width="4dp"/>
        <TextView
            android:id="@+id/TextView12" android:text="Time"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="2dip" android:gravity="center"/>
        <TextView
            android:id="@+id/TextView13" android:text="Duration"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="2dip" android:gravity="center"/>

    </TableRow>

</TableLayout>
